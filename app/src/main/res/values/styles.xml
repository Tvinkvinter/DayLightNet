<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TEXT -->
    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseText.Header">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseText.Header.Header1">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="BaseText.Header.Header2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BaseText.Header.Header3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseText.LightText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/on_background_light</item>
    </style>

    <style name="BaseText.MenuItem">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- BUTTONS -->
    <style name="BigButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:paddingVertical">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuItemButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">28dp</item>
    </style>


</resources>